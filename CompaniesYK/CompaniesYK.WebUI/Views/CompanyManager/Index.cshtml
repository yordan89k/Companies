@model IEnumerable<CompaniesYK.Core.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h3>Manage Companies</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img class="img-thumbnail" style="width:150px" src="~/Content/CompanyImages/@item.Logo">
    </td>
    <td class="tableAccent">
        @Html.ActionLink(Html.DisplayFor(modelItem => item.Name).ToHtmlString(), "Edit", new { id = item.Id })
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrganizationNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
